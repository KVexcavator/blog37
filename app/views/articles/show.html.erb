
<h3><%= @article.title %></h3>
<p><%= @article.text %></p>
<div>
  <h2><%= t('articles.article_connents') %></h2>
  <% @article.comments.each do |article| %>
    <h3><%= article.author %></h3>
    <p><%= article.body %></p>
  <hr>
<% end %>
</div>
<p>
<%= form_for ([@article, @article.comments.build]) do |f| %>
  <p>
    <%= f.label :author %><br>
    <%= f.text_field :author %>
  </p>
  <p>
    <%= f.label :body %><br>
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.submit  t('articles.article_send_comment')%>
  </p>
<% end %>
</p>